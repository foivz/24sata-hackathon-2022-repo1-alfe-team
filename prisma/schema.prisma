// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String  @db.VarChar(200)
  refresh_token      String? @db.VarChar(600)
  access_token       String? @db.VarChar(600)
  expires_at         Int?
  token_type         String?
  scope              String? @db.VarChar(200)
  id_token           String? @db.VarChar(2000)
  session_state      String? @db.VarChar(400)
  oauth_token_secret String? @db.VarChar(400)
  oauth_token        String? @db.VarChar(400)
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  role          Role      @default(USER)
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?   @db.VarChar(500)
  accounts      Account[]
  sessions      Session[]

  TeamsAndUser TeamsAndUser[]
  Items        Items[]
  Spending     Spending[]
}

model VerificationToken {
  identifier String
  token      String   @unique @db.VarChar(400)
  expires    DateTime

  @@unique([identifier, token])
}

model Teams {
  id           String         @id @default(cuid())
  name         String
  ownerId      String
  TeamsAndUser TeamsAndUser[]
  Spending     Spending[]
}

model TeamsAndUser {
  id      String @id @default(cuid())
  team    Teams  @relation(fields: [teamsId], references: [id])
  teamsId String
  user    User   @relation(fields: [userId], references: [id])
  userId  String
}

model Sources {
  id    String  @id @default(cuid())
  name  String
  Items Items[]
}

model Types {
  id      String @id @default(cuid())
  name    String
  img_url String
}

model Items {
  id        String     @id @default(cuid())
  name      String
  User      User?      @relation(fields: [userId], references: [id])
  userId    String?
  price     Float
  source    Sources    @relation(fields: [sourcesId], references: [id])
  sourcesId String
  typesId   String?
  Spending  Spending[]
}

model Spending {
  id      String @id @default(cuid())
  item    Items  @relation(fields: [itemsId], references: [id])
  itemsId String
  amount  Int
  team    Teams  @relation(fields: [teamsId], references: [id])
  teamsId String
  user    User   @relation(fields: [userId], references: [id])
  userId  String
}
