// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

enum Role {
  USER
  ADMIN
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String  @db.VarChar(200)
  refresh_token      String? @db.VarChar(600)
  access_token       String? @db.VarChar(600)
  expires_at         Int?
  token_type         String?
  scope              String? @db.VarChar(200)
  id_token           String? @db.VarChar(2000)
  session_state      String? @db.VarChar(400)
  oauth_token_secret String? @db.VarChar(400)
  oauth_token        String? @db.VarChar(400)
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  role          Role      @default(USER)
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?   @db.VarChar(500)
  accounts      Account[]
  sessions      Session[]

  TeamsAndUser TeamsAndUser[]
  Owner        Teams[]
  Items        Items[]
  Spending     Spending[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique @db.VarChar(400)
  expires    DateTime

  @@unique([identifier, token])
}

model Teams {
  id           String         @id @default(cuid())
  name         String
  ownerId      String
  owner        User           @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  TeamsAndUser TeamsAndUser[]
  Spending     Spending[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model TeamsAndUser {
  id        String   @id @default(cuid())
  team      Teams    @relation(fields: [teamsId], references: [id])
  teamsId   String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Sources {
  id        String   @id @default(cuid())
  name      String
  Items     Items[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Types {
  id        String   @id @default(cuid())
  name      String
  img_url   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Items {
  id        String     @id @default(cuid())
  name      String
  User      User?      @relation(fields: [userId], references: [id])
  userId    String?
  price     Float
  source    Sources    @relation(fields: [sourcesId], references: [id])
  sourcesId String
  typesId   String?
  Spending  Spending[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Spending {
  id        String   @id @default(cuid())
  item      Items    @relation(fields: [itemsId], references: [id])
  itemsId   String
  amount    Int
  team      Teams    @relation(fields: [teamsId], references: [id])
  teamsId   String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
